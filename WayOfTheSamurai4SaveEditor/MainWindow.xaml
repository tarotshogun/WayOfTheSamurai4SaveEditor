<Window x:Class="WayOfTheSamurai4SaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WayOfTheSamurai4SaveEditor"
        mc:Ignorable="d"
        Title="WayOfTheSamurai4SaveEditor" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="ファイル">
                        <MenuItem Header="開く"/>
                        <MenuItem Header="保存"/>
                        <MenuItem Header="名前を付けて保存"/>
                    </MenuItem>
                    <MenuItem Header="ヘルプ">
                        <MenuItem Header="侍道4セーブエディタについて"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
            <TabControl x:Name="tabControl">
                <TabItem Header="主人公情報">
                    <DataGrid x:Name="mainCharacterDataGrid"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem Header="帯刀中">
                    <DataGrid x:Name="taitouDataGrid" d:ItemsSource="{d:SampleData ItemCount=1}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem Header="武器袋">
                    <DataGrid x:Name="bukiBukuroDataGrid" d:ItemsSource="{d:SampleData ItemCount=3}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem Header="武器箪笥">
                    <DataGrid x:Name="bukiDansuDataGrid" d:ItemsSource="{d:SampleData ItemCount=100}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem Header="流派">
                    <DataGrid x:Name="ryuuhaDataGrid" d:ItemsSource="{d:SampleData ItemCount=3}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
